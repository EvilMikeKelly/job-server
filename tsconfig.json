{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client"]
  },
  "parserOptions": {
    "tsconfigRootDir": "./assets/src/scripts/interactive"
  },
  "include": [
    "./assets/src/**/*.ts",
    "./assets/src/**/*.tsx",
    "./assets/src/**/*.js",
    "./assets/src/**/*.jsx",
    "./tsconfig.json"
  ]
}
